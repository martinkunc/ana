{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "dotnet-watch-ana-web",
            "command": "dotnet",
            "args": [
                "watch",
                "--project", "ana.Web.csproj",
                "--configuration", "Debug",
                "--launch-profile", "BlazorWeb"
            ],
            "type": "process",
            "problemMatcher": {
                "base": "$msCompile",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^dotnet watch ðŸ”¥ Hot reload enabled\\.",
                    "endsPattern": "^\\s+Application started\\. Press Ctrl\\+C to shut down\\."
                }
            },
            "options": {
                "cwd": "${workspaceFolder}/ana.Web"
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
	]
}